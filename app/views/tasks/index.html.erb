<h1>タスク一覧</h1>

<div>
  <% @tasks.each do |task| %>
    <% task.is_display if true %>
      <% if task.status == "draft" %>
        <li><%= link_to task.title, task_path(task), :style=>"color:#FF0000;" %> <%= task.created_at.strftime("%Y年%m月%d日") %></li>
      <% elsif task.status == "published" %>
        <li><%= link_to task.title, task_path(task), :style=>"color:#0000FF;" %> <%= task.created_at.strftime("%Y年%m月%d日") %></li>
      <% elsif task.status == "archieved" %>
        <li><%= link_to task.title, task_path(task), :style=>"color:#008000;" %> <%= task.created_at.strftime("%Y年%m月%d日") %></li>
      <% end %>
  <% end %>
</div>
<%= link_to "出品する", new_task_path %>
<%= link_to "非表示一覧" , tasks_hide_path %>
