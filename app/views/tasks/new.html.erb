<h1>タスク登録フォーム</h1>
<!-- パーシャルを使っています -->
<%= render "layouts/shared" %>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label "タスク名:" %>
    <p><%= f.text_field :title %></p>
  </div>

  <div>
    <%= f.label "タスクメモ:" %>
    <p><%= f.text_area :memo %></p>
  </div>

  <div>
    <%= f.label "状態:" %>
    <p><%= f.select :status, [["下書き", "draft"], ["公開", "published"], ["アーカイブ", "archieved"]] %></p>

  </div>

    <p><%= f.submit "登録" %></p>
<% end %>

<%= link_to "一覧", tasks_path %>


